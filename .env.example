# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/google_drive_clone
MONGODB_TEST_URI=mongodb://localhost:27017/google_drive_clone_test

# JWT
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRATION=7d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region
S3_BUCKET_NAME=your_s3_bucket_name

# File Upload
MAX_FILE_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.doc,.docx,.xls,.xlsx

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=debug

# Email (for password reset, notifications, etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=noreply@yourdomain.com

# Frontend URL (for CORS, email links, etc.)
FRONTEND_URL=http://localhost:3000

# Redis (for caching, if implemented)
REDIS_URL=redis://localhost:6379

# Two-Factor Authentication
TWO_FACTOR_APP_NAME=YourAppName

# Sentry or other error tracking service
SENTRY_DSN=your_sentry_dsn

# Feature Flags
ENABLE_FILE_VERSIONING=true
ENABLE_FOLDER_SHARING=true